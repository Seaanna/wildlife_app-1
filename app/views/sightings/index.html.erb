<p id="notice"><%= notice %></p>

<h1>Listing Sightings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Region</th>
      <th>Animal</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.date %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <td><%= sighting.region %></td>
        <td><%= sighting.animal.common_name %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<form action="/sightings" method="get">
  <label for="start_date">Start date</label><br>
  <input id="start_date" name="start_date" type="text"><br>
  <label for="end_date">End date</label><br>
  <input id="end_date" name="end_date" type="text"><br>
  <label for="region">Region</label><br>
  <input id="region" name="region" type="text"><br>
  <button>Run report</button>
</form>




